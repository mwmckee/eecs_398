<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
  
    <style name="root">
        <item name="android:layout_width">		match_parent</item>    
    	<item name="android:layout_height">		match_parent</item>
    	<item name="android:background">		@color/root_background</item>
    </style>
    
    <style name="button">
    	<item name="android:layout_width">			@dimen/button_width</item>    
    	<item name="android:layout_height">			@dimen/main_menu_button_height</item>
    	<item name="android:layout_centerInParent">	true</item>
    	<item name="android:background">			@drawable/main_menu_button_background</item>
    	<item name="android:textSize">				@dimen/main_menu_button_text_size</item>
    	<item name="android:layout_margin">			@dimen/main_menu_button_margin</item> 
    </style>
</resources>
